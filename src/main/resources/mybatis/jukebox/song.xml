<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.jukebox.dao.SongDao">

  <insert id="insert" parameterType="Song" useGeneratedKeys="true" keyProperty="sid" keyColumn="sid">
    insert into songs (mid, title, artist, video_id, duration)
    values (#{mid}, #{title}, #{artist}, #{videoId}, #{duration})
  </insert>

  <select id="selectBySid" parameterType="Long" resultType="Song">
    select * from songs where sid = #{sid}
  </select>

  <select id="selectByJid" parameterType="Long" resultType="Song">
    select * from songs where jid = #{jid} order by created_at desc
  </select>

  <delete id="delete" parameterType="Long">
    delete from songs where sid = #{sid}
  </delete>


</mapper>