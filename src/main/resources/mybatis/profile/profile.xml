<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.profile.dao.ProfileDao">
  <insert id="insert" parameterType="Profile">
    INSERT INTO PROFILES (NICKNAME, mid)
    VALUES (#{nickname}, #{mid})
  </insert>
  
  <!-- <select id="existsByNickname" parameterType="String" resultType="int">
      SELECT COUNT(*)
      FROM profiles
      WHERE nickname = #{nickname}
  </select> -->

  <select id="selectByPid" parameterType="Long" resultType="Profile">
    SELECT (*)
    FROM profiles
    WHERE pid = #{pid}
  </select>
  
  <select id="selectByMid" parameterType="Long" resultType="Profile">
    SELECT (*)
    FROM profiles
    WHERE mid = #{mid}
  </select>

  <select id="selectByNickname" parameterType="Long" resultType="Profile">
    SELECT (*)
    FROM profiles
    WHERE nickname = #{nickname}
  </select>

  <!-- <select id="findAll" resultType="Profile">
      SELECT * FROM PROFILES
  </select> -->


  <update id="updateProfile" parameterType="com.example.demo.profile.dto.ProfileUpdateRequest">
    UPDATE PROFILE_TABLE
    <set>
        <if test="mid != null"> NICKNAME = #{mid}, </if>
        <if test="jid != null"> NICKNAME = #{jid}, </if>
        <if test="tid != null"> NICKNAME = #{tid}, </if>
        <if test="nickname != null"> NICKNAME = #{nickname}, </if>
        <if test="birthdate != null"> BIRTHDATE = #{birthdate}, </if>
        <if test="statusMessage != null"> STATUS_MESSAGE = #{statusMessage}, </if>
        <if test="intro != null"> INTRO = #{intro}, </if>
        <if test="postalCode != null"> POSTAL_CODE = #{postalCode}, </if>
        <if test="mainAddress != null"> MAIN_ADDRESS = #{mainAddress}, </if>
        <if test="detailAddress != null"> DETAIL_ADDRESS = #{detailAddress}, </if>
        UPDATED_AT = SYSDATE
    </set>
    WHERE PID = #{pid}
  </update>


</mapper>