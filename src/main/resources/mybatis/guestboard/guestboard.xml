<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.guestboard.dao.GuestBoardDao">
  
  <insert id="insert" parameterType="GuestBoard">
    insert into guestboard (gid, pid, content)
    values (#{gid}, #{pid}, #{content})
  </insert>

  <select id="selectByGbid" parameterType="Long" resultType="GuestBoard">
    select * from guestBoard where gbid = #{gbid}
  </select>

  <!--앞에서 offset만큼 건너뛰고 limit만큼 행 가져오기-->
  <select id="select" parameterType="InfiniteScroll" resultType="GuestBoard">
    select * from guestBoard
    order by gbid desc
    offset #{offset} rows fetch next #{limit} rows only
  </select>

  <update id="update" parameterType="GuestBoard">
    update guestBoard 
    set content = #{content},
        updated_at = sysdate
    where gbid = #{gbid}
  </update>

  <delete id="delete" parameterType="Long">
    delete from guestBoard where gbid = #{gbid}
  </delete>



</mapper>